<Page
    x:Class="POKEDEX.Principal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POKEDEX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1500"
    Height="800"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    mc:Ignorable="d">
    
    <Page.Background>
        <ImageBrush ImageSource="/Assets/fondopokedexcal.png" Stretch="Fill" />
    </Page.Background>

    <Grid Width="1500">
        
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg"/>
        </Grid.Background>
        
        <TextBlock
            Width="798"
            Height="120"
            Margin="343,114,343,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Verdana Pro Black"
            FontSize="100"
            FontWeight="Bold"
            Foreground="Black"
            Text="IPOKEMON 2024"
            TextWrapping="Wrap" FocusVisualSecondaryBrush="#B3FFFFFF" />
        
        <Image HorizontalAlignment="Left" 
               Height="66" 
               Margin="758,416,0,0" 
               VerticalAlignment="Top"
               Width="66" 
               Source="/Assets/pokeball.png" 
               RenderTransformOrigin="0.5,0.5" 
               UseLayoutRounding="False" 
               d:LayoutRounding="Auto">
            
            <Image.RenderTransform>
                <CompositeTransform Rotation="-2.95"/>
            </Image.RenderTransform>
        </Image>
        
        <Image HorizontalAlignment="Left"
               Height="84" 
               Margin="1086,693,0,0" 
               VerticalAlignment="Top"
               Width="399" 
               Source="/Assets/logos.png"/>

    </Grid>
</Page>
