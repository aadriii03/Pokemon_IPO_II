<Page
    x:Class="POKEDEX.Combate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POKEDEX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="800" VerticalAlignment="Top">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/fondopokedexcal.png" Stretch="Fill" />
    </Page.Background>

    <Page.Resources>

        <Style x:Key="RoundTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#AAFFFFFF" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="Width" Value="870" />
            <Setter Property="PlaceholderText" Value="Buscar pokemon ..." />
            <Setter Property="Margin" Value="62,111,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                             x:Name="Border"
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="10" />
                            <ScrollViewer
                             x:Name="ContentElement"
                             Padding="{TemplateBinding Padding}"
                             VerticalAlignment="Center"
                             IsTabStop="False">
                                <ScrollViewer.Content>
                                    <ContentPresenter x:Name="ContentHost" Content="{TemplateBinding Text}" />
                                </ScrollViewer.Content>
                            </ScrollViewer>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="437*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBox x:ConnectionId='7'
            x:Name="tbSearch"
            Grid.RowSpan="1"
            Margin="167,0,0,623"
            Background="#AE8D8D8D"
            FontFamily="Times New Roman"
            FontSize="48"
            Foreground="Black"
            Style="{StaticResource RoundTextBox}"
            Text="Selecciona modo de juego para combatir"
            TextWrapping="Wrap"
            Height="72"
            Width="811"
            IsReadOnly="True" BorderBrush="Black" Grid.Column="1"/>

        <Button x:ConnectionId='8' x:Name="contraIA"
            Width="400"
            Height="360"
            Background="#90385BBD"
            Margin="98,339,0,0"
            VerticalAlignment="Top"
                                                   
                                                
                                        
            Grid.Column="1">

            <StackPanel VerticalAlignment="Center">
                <Image Source="Assets/IA.png" Width="200" Height="200"/>
                <TextBlock Text="vs IA" FontSize="60" FontWeight="Bold" FontFamily="Times New Roman" HorizontalAlignment="Center" Height="66"/>
            </StackPanel>
        </Button>


        <Button x:ConnectionId='9' x:Name="multijugador"
            Width="400"
            Height="360"
            Background="#90385BBD"
            Margin="688,339,0,0"
                                                   
                                                
            VerticalAlignment="Top"
                                       Grid.Column="1">

            <StackPanel VerticalAlignment="Center">
                <Image Source="/Assets/multijugador.png" Width="200" Height="200"/>
                <TextBlock Text="Multijugador" FontSize="60" FontWeight="Bold" FontFamily="Times New Roman" HorizontalAlignment="Center" Height="66"/>
            </StackPanel>

        </Button>



    </Grid>
</Page>

