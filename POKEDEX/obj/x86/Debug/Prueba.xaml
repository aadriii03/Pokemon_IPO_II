<Page
    x:Class="Pokedex.Prueba"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Custom="using:POKEDEX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POKEDEX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid Height="800" VerticalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Imagenes/Fondo3.png" Stretch="UniformToFill" />
        </Grid.Background>
        <TextBlock
            Margin="0,38,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FocusVisualPrimaryBrush="#E4FFFFFF"
            FontSize="72"
            FontWeight="Bold"
            Foreground="Black"
            Text="MIS POKEMONS" />

        <FlipView
            Height="610"
            Margin="10,180,10,0"
            VerticalAlignment="Top"
            Background="#00F3F3F3">
            <!--  Toxicroak  -->
            <FlipViewItem
                Width="1490"
                Height="630"
                Background="Transparent">
                <RelativePanel Width="1500" Height="610">
                    <Rectangle
                        Width="405"
                        Height="510"
                        Margin="20,0,0,0"
                        Fill="#CA000000"
                        Stroke="Black" />
                    <Custom:Toxicroack
                        Width="755"
                        Height="490"
                        Margin="500,0,0,0" />
                    <Image x:ConnectionId='14'
                        x:Name="Image"
                        Width="200"
                        Height="200"
                        Margin="30"
                        Source="/Assets/Imagenes/toxi.png">
                        <Image.FocusVisualSecondaryBrush>
                            <ImageBrush />
                        </Image.FocusVisualSecondaryBrush>
                    </Image>
                    <TextBlock x:ConnectionId='15'
                        x:Name="TextBlock1"
                        Margin="0,10,0,0"
                        FontSize="24"
                        FontWeight="Bold"
                        RelativePanel.RightOf="Image"
                        Text="Toxicroak" Foreground="White" />
                    <TextBlock x:ConnectionId='16'
                        x:Name="TextBlock2"
                        Margin="0,10,0,0"
                        FontSize="18"
                        RelativePanel.Below="TextBlock1"
                        RelativePanel.RightOf="Image"
                        Text="Tipo: Veneno/Lucha" Foreground="White" />
                    <TextBlock x:ConnectionId='17'
                        x:Name="TextBlock3"
                        Margin="0,10,0,0"
                        FontSize="18"
                        RelativePanel.Below="TextBlock2"
                        RelativePanel.RightOf="Image"
                        Text="Altura: 1.3m" Foreground="White" />
                    <TextBlock x:ConnectionId='18'
                        x:Name="TextBlock4"
                        Margin="0,10,0,0"
                        FontSize="18"
                        RelativePanel.Below="TextBlock3"
                        RelativePanel.RightOf="Image"
                        Text="Peso: 44.4kg" Foreground="White" />
                    <TextBlock x:ConnectionId='19'
                        x:Name="descripcion_toxi"
                        Width="358"
                        Margin="43,0,0,0"
                        FontSize="16"
                        RelativePanel.Below="Image"
                        TextAlignment="Justify"
                        Foreground="White"
                        Height="253"
                        TextWrapping="Wrap"
                        Text="Toxicroak es un Pokémon de tipo Veneno/Lucha. Es la evolución de Croagunk. Tiene un aspecto intimidante y posee una piel que exuda un veneno letal. Toxicroak utiliza sus garras venenosas en combate, y su agilidad lo hace un oponente peligroso en la batalla."/>

                </RelativePanel>
            </FlipViewItem>

            <!--  Dragonite  -->
            <FlipViewItem>
                <RelativePanel>
                    <Rectangle
                        Width="405"
                        Height="510"
                        Margin="20,0,0,0"
                        Fill="#CA000000"
                        Stroke="Black" />
                    <Custom:Dragonite
                        Width="755"
                        Height="490"
                        Margin="500,0,0,0" />
                    <Image x:ConnectionId='8'
                        x:Name="Image1"
                        Width="200"
                        Height="200"
                        Margin="20"
                        Source="/Assets+Toxicroack+incial/Dragonite.png" />
                    <Border
                        Margin="10"
                        Background="White"
                        RelativePanel.Below="Image1"
                        RelativePanel.RightOf="Image1">
                        <!--  Aquí puedes agregar el control de usuario DragoniteJPG si lo tienes  -->
                    </Border>
                    <TextBlock x:ConnectionId='9'
                        x:Name="TextBlock5"
                        Margin="10"
                        FontSize="24"
                        FontWeight="Bold"
                        RelativePanel.RightOf="Image1"
                        Text="Dragonite" Foreground="White" />
                    <TextBlock x:ConnectionId='10'
                        x:Name="TextBlock6"
                        Margin="10"
                        FontSize="18"
                        RelativePanel.Below="TextBlock5"
                        RelativePanel.RightOf="Image1"
                        Text="Tipo: Dragón/Volador" Foreground="White" />
                    <TextBlock x:ConnectionId='11'
                        x:Name="TextBlock7"
                        Margin="10"
                        FontSize="18"
                        RelativePanel.Below="TextBlock6"
                        RelativePanel.RightOf="Image1"
                        Text="Altura: 2.2m" Foreground="White" />
                    <TextBlock x:ConnectionId='12'
                        x:Name="TextBlock8"
                        Margin="10"
                        FontSize="18"
                        RelativePanel.Below="TextBlock7"
                        RelativePanel.RightOf="Image1"
                        Text="Peso: 210kg" Foreground="White" />
                    <TextBlock x:ConnectionId='13'
                        x:Name="TextBlockDescripcion1"
                        Width="358"
                        Margin="40,0,0,0"
                        FontSize="16"
                        RelativePanel.Below="Image1"
                        Text="Dragonite es un Pokémon de tipo Dragón/Volador. Es la evolución final de Dratini. Tiene la capacidad de volar a grandes alturas y es muy inteligente. A pesar de su aspecto imponente, Dragonite es conocido por ser amable y protector con los que lo rodean."
                        TextAlignment="Justify"
                        TextWrapping="Wrap" Foreground="White" />


                </RelativePanel>

            </FlipViewItem>

            <!--  Butterfree  -->
            <FlipViewItem>
                <RelativePanel>
                    <Rectangle
                        Width="405"
                        Height="510"
                        Margin="20,0,0,0"
                        Fill="#CA000000"
                        Stroke="Black" />
                    <Custom:ButterFreeACC
                        Width="755"
                        Height="490"
                        Margin="500,0,0,0" />
                    <Image x:ConnectionId='2'
                        x:Name="Image2"
                        Width="200"
                        Height="200"
                        Margin="20"
                        Source="/Assets/Imagenes/butterfreeP.png" />
                    <Border
                        Margin="10"
                        Background="White"
                        RelativePanel.Below="Image2"
                        RelativePanel.RightOf="Image2">
                        <!--  Aquí puedes agregar el control de usuario ButterfreeJPG si lo tienes  -->
                    </Border>
                    <TextBlock x:ConnectionId='3'
                        x:Name="TextBlock9"
                        Margin="10"
                        FontSize="24"
                        Foreground="White"
                        FontWeight="Bold"
                        RelativePanel.RightOf="Image2"
                        Text="Butterfree" />
                    <TextBlock x:ConnectionId='4'
                        x:Name="TextBlock10"
                        Margin="10"
                        FontSize="18"
                        Foreground="White"
                        RelativePanel.Below="TextBlock9"
                        RelativePanel.RightOf="Image2"
                        Text="Tipo: Bicho/Volador" />
                    <TextBlock x:ConnectionId='5'
                        x:Name="TextBlock11"
                        Margin="10"
                        FontSize="18"                        
                        Foreground="White"
                        RelativePanel.Below="TextBlock10"
                        RelativePanel.RightOf="Image2"
                        Text="Altura: 1.1m" />
                    <TextBlock x:ConnectionId='6'
                        x:Name="TextBlock12"
                        Margin="10"
                        FontSize="18"
                        Foreground="White"
                        RelativePanel.Below="TextBlock11"
                        RelativePanel.RightOf="Image2"
                        Text="Peso: 32kg" />
                    <TextBlock x:ConnectionId='7'
                        x:Name="TextBlockDescripcion2"
                        Width="358"
                        Margin="40,0,0,0"
                        FontSize="16"
                        Foreground="White"
                        RelativePanel.Below="Image2"
                        Text="Butterfree es un Pokémon de tipo Bicho/Volador. Es la evolución final de Caterpie. Tiene hermosas alas que puede batir rápidamente para crear fuertes ráfagas de viento. Es conocido por su habilidad para esparcir polen y por su grácil vuelo."
                        TextAlignment="Justify"
                        TextWrapping="Wrap" />

                </RelativePanel>
            </FlipViewItem>
        </FlipView>
    </Grid>
</Page>

