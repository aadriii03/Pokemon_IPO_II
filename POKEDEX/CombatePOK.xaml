<Page
    x:Class="POKEDEX.CombatePOK"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POKEDEX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Left" Width="1496">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg" />
        </Grid.Background>
        <Rectangle
            Width="1294"
            Height="330"
            Margin="78,52,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#330845E3"
            Stroke="Black" />

        <Rectangle
            Width="1294"
            Height="330"
            Margin="78,418,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#33E30808"
            Stroke="Black" />
        <Rectangle
            Margin="864,360,438,-43"
            d:LayoutRounding="Auto"
            Fill="#CA000000"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black"
            UseLayoutRounding="False">
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90.347" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            Margin="363,-33,951,341"
            d:LayoutRounding="Auto"
            Fill="#CA000000"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black"
            UseLayoutRounding="False">
            <Rectangle.RenderTransform>
                <CompositeTransform Rotation="90.347" />
            </Rectangle.RenderTransform>
        </Rectangle>

        <Button
            x:Name="BtnAtaqueDebilDJUG2"
            Width="137"
            Height="37"
            Margin="249,146,0,0"
            VerticalAlignment="Top"
            Background="#B3C4E40A"
            Click="BtnAtaqueDebilDJUG2_Click"
            Content="Ataque Débil"
            FontSize="18"
            RelativePanel.Below="TextBlockDescripcion" />
        <Button
            x:Name="BtnAtaqueDebilDJUG1"
            Width="137"
            Height="37"
            Margin="761,539,0,0"
            VerticalAlignment="Top"
            Background="#B3C4E40A"
            Click="BtnAtaqueDebilDJUG1_Click"
            Content="Ataque Débil"
            FontSize="18"
            RelativePanel.Below="TextBlockDescripcion" />
        <Button
            x:Name="BtnAtaqueFuerteDJUG2"
            Margin="443,146,0,0"
            VerticalAlignment="Top"
            Background="#B38752FF"
            Click="BtnAtaqueFuerteDJUG2_Click"
            Content="Ataque Fuerte"
            FontSize="18"
            RelativePanel.Below="TextBlockDescripcion"
            RelativePanel.RightOf="BtnAtaqueDebilD" />

        <Button
            x:Name="BtnAtaqueFuerteDJUG1"
            Margin="942,539,0,0"
            VerticalAlignment="Top"
            Background="#B38752FF"
            Click="BtnAtaqueFuerteDJUG1_Click"
            Content="Ataque Fuerte"
            FontSize="18"
            RelativePanel.Below="TextBlockDescripcion"
            RelativePanel.RightOf="BtnAtaqueDebilD" />

        <Button
            x:Name="BtnDescansoDJUG2"
            Width="137"
            Margin="248,227,0,0"
            VerticalAlignment="Top"
            Background="#B3EA49D5"
            Click="BtnDescansoDJUG2_Click"
            Content="Descanso"
            FontSize="18"
            RelativePanel.Below="BtnAtaqueDebilD" />

        <Button
            x:Name="BtnDescansoDJUG1"
            Width="137"
            Margin="761,625,0,0"
            VerticalAlignment="Top"
            Background="#B3EA49D5"
            Click="BtnDescansoDJUG1_Click"
            Content="Descanso"
            FontSize="18"
            RelativePanel.Below="BtnAtaqueDebilD" />

        <Button
            x:Name="BtnEscudoDJUG1"
            Width="137"
            Height="37"
            Margin="942,626,0,0"
            VerticalAlignment="Top"
            Background="#B335E2D6"
            Click="BtnEscudoDJUG1_Click"
            Content="Escudo"
            FontSize="18"
            RelativePanel.Below="BtnAtaqueFuerteD"
            RelativePanel.RightOf="BtnDescansoD" />

        <Button
            x:Name="BtnEscudoDJUG2"
            Width="137"
            Height="37"
            Margin="443,227,0,0"
            VerticalAlignment="Top"
            Background="#B335E2D6"
            Click="BtnEscudoDJUG2_Click"
            Content="Escudo"
            FontSize="18"
            RelativePanel.Below="BtnAtaqueFuerteD"
            RelativePanel.RightOf="BtnDescansoD" />

        <TextBlock
            x:Name="TextBlock1"
            Margin="69,14,1299,754"
            FontSize="24"
            FontWeight="Bold"
            RelativePanel.RightOf="Image"
            Text="Jugador 2" />

        <TextBlock
            x:Name="TextBlock1_Copiar"
            Margin="1239,386,129,382"
            FontSize="24"
            FontWeight="Bold"
            RelativePanel.RightOf="Image"
            Text="Jugador 1" />

        <Rectangle
            Width="227"
            Height="60"
            Margin="1237,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Fill="#B2000000"
            FocusVisualPrimaryBrush="#E4110101"
            Stroke="Black" />

        <TextBox
            x:Name="txtturno"
            Width="204"
            Height="56"
            Margin="1237,28,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            FontSize="18"
            IsReadOnly="True"
            Text="Turno de: "
            TextWrapping="Wrap" Foreground="#E4FFFFFF" />

        <Grid
            x:Name="Jugador1Control"
            Width="434"
            Height="273"
            Margin="146,450,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Grid
            x:Name="Jugador2Control"
            Width="502"
            Height="270"
            Margin="837,75,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Button x:Name="Pocion_energia_JUG1"
            Width="59"
            Height="62"
            Margin="1122,613,0,0"
            VerticalAlignment="Top"
            Click="BtnPocionEnergiaDJUG1_Click">
            <Button.Background>
                <ImageBrush ImageSource="/AssetsDragoniteCSD/pocionstamina.png" Stretch="Uniform"/>
            </Button.Background>
            <Image Source="/AssetsDragoniteCSD/pocionstamina.png.png" Stretch="Uniform" Margin="-11,-10,-12,-11"/>
        </Button>

        <Button x:Name="Pocion_vida_JUG1"
            Width="59"
            Height="62"
            Margin="1123,527,0,0"
            VerticalAlignment="Top"
            Click="BtnPocionVidaDJUG1_Click">
            <Button.Background>
                <ImageBrush ImageSource="/AssetsDragoniteCSD/pocionvida.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="Pocion_energia_JUG2"
            Width="59"
            Height="62"
            Margin="611,220,0,0"
            VerticalAlignment="Top"
            Click="BtnPocionEnergiaDJUG2_Click">
            <Button.Background>
                <ImageBrush ImageSource="/AssetsDragoniteCSD/pocionstamina.png" Stretch="Uniform"/>
            </Button.Background>
            <Image Source="/AssetsDragoniteCSD/pocionstamina.png.png" Stretch="Uniform" Margin="-11,-10,-12,-11"/>
        </Button>
        <Button x:Name="Pocion_vida_JUG2"
            Width="59"
            Height="62"
            Margin="612,134,0,0"
            VerticalAlignment="Top"
            Click="BtnPocionVidaDJUG2_Click">
            <Button.Background>
                <ImageBrush ImageSource="/AssetsDragoniteCSD/pocionvida.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
