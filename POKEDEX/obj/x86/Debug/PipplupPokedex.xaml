<Page
    x:Class="POKEDEX.PipplupPokedex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POKEDEX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    mc:Ignorable="d">

    <Page.Resources>

        <Style x:Key="RoundTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#AAFFFFFF" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="Width" Value="870" />
            <Setter Property="PlaceholderText" Value="Buscar pokemon ..." />
            <Setter Property="Margin" Value="62,111,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" />
                            <ScrollViewer
                                x:Name="ContentElement"
                                Padding="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                IsTabStop="False">
                                <ScrollViewer.Content>
                                    <ContentPresenter x:Name="ContentHost" Content="{TemplateBinding Text}" />
                                </ScrollViewer.Content>
                            </ScrollViewer>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Page.Background>
        <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg"/>
    </Page.Background>

    <Grid Height="800" VerticalAlignment="Top">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Imagenes/fondo_pokedex2.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle
            Fill="#B3CCCCCC" Margin="20,143,20,20" />

        <Image
            Source="/Assets/Imagenes/pip.png" Margin="73,313,1098,181" RenderTransformOrigin="0.549,0.335" />

        <TextBox x:ConnectionId='7'
            x:Name="tbSearch"
            Grid.RowSpan="1"
            Width="741"
            Height="72"
            Margin="112,0,0,690"
            Background="#AAFFFFFF"
            FontFamily="Times New Roman"
            FontSize="48"
            Foreground="Black"
            Style="{StaticResource RoundTextBox}"
            Text="Piplup N.º 0393"
            TextWrapping="Wrap" />
        <TextBlock
            FontFamily="Segoe UI Semibold"
            FontSize="36"
            Foreground="Black"
            Text="Tipo:" Margin="476,214,933,538" />
        <TextBlock
            FontFamily="Segoe UI Semibold"
            FontSize="36"
            Foreground="Black"
            Text="Debilidades:" Margin="467,296,825,456" RenderTransformOrigin="0.471,0.916" />

        <Border
            Background="#A1FF0000" 
            Margin="694,0,0,461"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />

        <Border
            Background="#A1F0DD33" 
            Margin="694,0,0,461"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" >

            <TextBlock
                FontFamily="Segoe UI"
                FontSize="24"
                Foreground="Black"
                Text="Eléctrico"
                Padding="5" />
        </Border>

        <Border 
            Background="#E420CE56"
            Margin="830,0,0,461"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" >

            <TextBlock
                FontFamily="Segoe UI"
                FontSize="24"
                Foreground="Black"
                Text="Planta"
                Padding="5" />
        </Border>

        <Border
            Margin="1025,0,0,461"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#B3CCCCCC" />
                    <GradientStop Offset="1" Color="#A13C89D7" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border
            Background="#B3A38C21" 
            Margin="694,0,0,409"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" Height="41" />

        <Border
            Margin="600,216,834,540">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#A13C89D7" />
                    <GradientStop Offset="1" Color="#A13C89D7" />
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock
                FontFamily="Segoe UI"
                FontSize="24"
                Foreground="Black"
                Text="Agua"
                Padding="5" />
        </Border>

        <TextBlock
            FontFamily="Segoe UI Semibold"
            FontSize="36"
            Foreground="Black"
            Text="Habilidad: " Margin="472,421,847,331" />

        <TextBlock
            FontFamily="Segoe UI Semibold"
            FontSize="24"
            Foreground="Black"
            Text="Torrente" Margin="658,429,661,338" />

        <TextBox
            Text="No se le da bien andar. Se tropieza mucho, pero su orgullo le hace sacar pecho como si nada."
            Margin="471,541,427,138"
            TextWrapping="Wrap"
            FontFamily="Segoe UI"
            FontSize="25"
            Foreground="Black"
            Background="#AAFFFFFF"
            Padding="10"
            IsReadOnly="True" />


    </Grid>
</Page>

