<Page
    x:Class="POKEDEX.Pokedex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:POKEDEX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="800"
    mc:Ignorable="d">

    <Page.Resources>

        <Style x:Key="RoundTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#AAFFFFFF" />
            <Setter Property="FontSize" Value="48" />
            <Setter Property="Width" Value="870" />
            <Setter Property="PlaceholderText" Value="Buscar pokemon ..." />
            <Setter Property="Margin" Value="62,111,0,0" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="Green" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border
                                x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" />
                            <ScrollViewer
                                x:Name="ContentElement"
                                Padding="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                IsTabStop="False">
                                <ScrollViewer.Content>
                                    <ContentPresenter x:Name="ContentHost" Content="{TemplateBinding Text}" />
                                </ScrollViewer.Content>
                            </ScrollViewer>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="/Assets/fondo_pokedex2.jpg"/>
    </Page.Background>

    <Grid Height="800" VerticalAlignment="Top">
